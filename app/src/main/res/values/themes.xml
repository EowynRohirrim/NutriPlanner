<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.NutriPlanner" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->

    </style>

    <style name="Theme.NutriPlanner" parent="Base.Theme.NutriPlanner" />

    <style name="Theme.App.Starting" parent ="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/darkblue</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher</item>
        <item name="windowSplashScreenAnimationDuration">300</item>
        <item name="postSplashScreenTheme">@style/Theme.NutriPlanner</item>

    </style>

    <!-- Splash Screen Theme -->
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>


    <style name="NegroABlanco">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="NegroABlancoIconos">
        <item name="android:tint">@color/black</item>
    </style>

    <!--   *******************     MAIN FRAGMENT     *******************-->

    <style name="MenuBackgroundColor">
        <item name="android:background">@color/bluelight</item>
    </style>



    <!--   *******************     HOME FRAGMENT     *******************-->

    <style name="HomeBackgroundColor">
        <item name="android:background">@drawable/bg_color_light</item>
    </style>

    <style name="HomeColorLetras">
        <item name="android:textColor">@color/black</item>
    </style>

    <!--   *******************     FOOD ITEM    *******************-->

    <style name="FoodColor">
        <item name="cardBackgroundColor">@color/lightblue</item>
    </style>
    <style name="FoodTitle">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="FoodSubtitle">
        <item name="android:textColor">@color/bluedark</item>
    </style>

    <!--   *******************           *******************-->


    <!-- Card HomeScreen Theme -->
    <style name="HomeTitle">
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>




    <!--   *******************     HOME FRAGMENT     *******************-->




    <!-- User Screen Theme -->
    <style name="UserSubtitle">
        <item name="textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18dp</item>
    </style>





    <!-- Planning Theme -->
    <style name="PlanningTittles">
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="PlanningText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Buttons Theme -->
    <style name="Buttons">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- SettingsTheme -->
    <style name="SettingsTittles">
        <item name="android:textColor">@color/settings_text_title</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="SettingsText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>